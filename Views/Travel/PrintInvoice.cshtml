@model UtilizationTrackerApp.Models.Data.TravelHistory_Model

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Invoice Print</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i class="fas fa-globe"></i>RAJESH TOUR & TRAVELS
                        <small class="float-right">Invoice No: @Html.DisplayFor(var => var.vSRNO)</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>RAJESH TOUR & TRAVELS.</strong><br>
                        SCO 263,<br />
                        Mugal Canal, <br />
                        Karnal(Haryana).<br />
                        PinCode:- 132001<br>
                        Phone: 9416438425,9812338425<br>
                        Email: info@almasaeedstudio.com
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    Bank Details
                    <address>
                        Name: Kotak Mahindra Bank<br />
                        Account: 21190987<br />
                        IFSC:KKBK0098
                    </address>

                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong>@Html.DisplayFor(var => var.vUserName)</strong><br>
                        @Html.DisplayFor(var => var.vAddress)<br />

                        Phone: @Html.DisplayFor(var => var.vUserPhoneNo)<br>
                        GSTIN: @Html.DisplayFor(var => var.vPartyGSTIN)
                    </address>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-6 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Driver Name</td>
                                <td>@Html.DisplayFor(var => var.vDriverName)</td>
                            </tr>
                            <tr>
                                <td>Driver Phone</td>
                                <td>@Html.DisplayFor(var => var.vDriverPhoneNo)</td>
                            </tr>
                            <tr>
                                <td>From TO</td>
                                <td>@Html.DisplayFor(var => var.vFromToPlace)</td>

                            </tr>
                            <tr>
                                <td>Vehicle Number</td>
                                <td>@Html.DisplayFor(var => var.vVehicleNo)</td>

                            </tr>
                            <tr>
                                <td>Vehicle No</td>
                                <td>@Html.DisplayFor(var => var.vVehicleNo)</td>

                            </tr>
                            <tr>
                                <td>Start Date</td>
                                <td>@Html.DisplayFor(var => var.dStartingDate)</td>
                            </tr>
                            <tr>
                                <td>End Date</td>
                                <td>@Html.DisplayFor(var => var.dClosingDate)</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="col-6 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Km from</td>
                                <td>@Html.DisplayFor(var => var.iStartingKM)</td>

                            </tr>
                            <tr>
                                <td>KM To</td>
                                <td>@Html.DisplayFor(var => var.iClosingKM)</td>

                            </tr>
                            <tr>
                                <td>Total Kilometer</td>
                                <td>@Html.DisplayFor(var => var.iTotalKM)</td>

                            </tr>
                            <tr>
                                <td>Per KM Charge</td>
                                <td>@Html.DisplayFor(var => var.mPerKMChangres)</td>

                            </tr>
                            <tr>
                                <td>Per Day Charge</td>
                                <td>@Html.DisplayFor(var => var.mPerDayChangres)</td>
                            </tr>
                            <tr>
                                <td>Night Charge</td>
                                <td> @Html.DisplayFor(var => var.mNightChangres)</td>
                            </tr>
                            <tr>
                                <td>Toll Tax & Parking</td>
                                <td>@Html.DisplayFor(var => var.mTollTaxAndParking)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6"></div>
                <!-- /.col -->
                <div class="col-6">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>@Html.DisplayFor(var => var.mTotalAmountBeforeTax)</td>
                            </tr>
                            @foreach (UtilizationTrackerApp.Models.Data.TravelTax_Model Item in Model.TaxList)
                            {
                                <tr>
                                    <th style="width:50%">Tax (@Item.mTax)</th>
                                    <td>@Item.mTaxAmount</td>
                                </tr>
                            }
                            
                            <tr>
                                <th>Total:</th>
                                <td>@Html.DisplayFor(var => var.mTotalAmount)</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>
